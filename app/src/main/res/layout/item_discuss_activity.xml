    <ImageView
        android:id="@+id/item_discuss_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/item_discuss_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/item_discuss_iv"
        android:gravity="center_vertical|start"
        android:paddingStart="10dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/item_discuss_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/item_discuss_name"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/item_discuss_iv"
        android:paddingStart="10dp" />

    <TextView
        android:id="@+id/item_discuss_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/item_discuss_line"
        android:layout_below="@id/item_discuss_connect"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/item_discuss_iv"
        android:gravity="center_vertical|start"
        android:paddingStart="10dp" />

    <Button
        android:id="@+id/item_discuss_agree"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/item_discuss_connect"
        android:layout_marginTop="3dp"
        android:background="@color/transparent"
        android:drawableStart="@mipmap/un_great"
        android:paddingStart="10dp" />

    <View
        android:id="@+id/item_discuss_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/item_discuss_agree"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/item_discuss_iv"
        android:background="@color/black" />
    <!--</RelativeLayout>-->
    <!--</android.support.v7.widget.CardView>-->
</RelativeLayout>
