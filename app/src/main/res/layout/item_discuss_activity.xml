<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="true"
        app:contentPadding="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_discuss_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/item_discuss_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/item_discuss_iv"
                android:gravity="center_vertical|start"
                android:paddingStart="10dp" />

            <TextView
                android:id="@+id/item_discuss_connect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/item_discuss_name"
                android:layout_toRightOf="@id/item_discuss_iv"
                android:paddingStart="10dp" />

            <TextView
                android:id="@+id/item_discuss_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_discuss_connect"
                android:layout_toEndOf="@id/item_discuss_iv"
                android:paddingStart="10dp" />

            <Button
                android:id="@+id/item_discuss_agree"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/item_discuss_connect"
                android:background="@color/transparent"
                android:drawableStart="@mipmap/un_great"
                android:paddingStart="10dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
