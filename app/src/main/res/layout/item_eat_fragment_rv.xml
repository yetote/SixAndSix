<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/item_eat_fragment_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/item_eat_fragment_name"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/item_eat_fragment_iv"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_eat_fragment_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_eat_fragment_iv"
                android:layout_margin="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_toRightOf="@id/item_eat_fragment_iv"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:layout_toRightOf="@id/item_eat_fragment_iv"
                android:id="@+id/item_eat_fragment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_eat_fragment_title"
                android:layout_margin="2dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:padding="2dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_eat_fragment_agree"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/item_eat_fragment_content"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_eat_fragment_discuss"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/item_eat_fragment_content"
                android:layout_toEndOf="@id/item_eat_fragment_agree"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_eat_fragment_time"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/item_eat_fragment_content"
                android:layout_toEndOf="@+id/item_eat_fragment_discuss"
                android:textSize="15sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>